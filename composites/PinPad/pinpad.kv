#:kivy 2.0.0
#: import ew kivy.uix.effectwidget
<PinPad>:
    # size: 800, 480
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: self.pinpad_background_color
        RoundedRectangle:
            size: dp(350), dp(450)
            pos: self.width / 2 -  dp(175), self.y_position

    canvas.after:
        Color:
            rgba: self.pinpad_button_color
        Ellipse:
            angle_start: 0
            angle_end: self.pin_one
            size: dp(20), dp(20)
            pos: self.width /2 - dp(97), self.height / 2 + dp(150)
        Ellipse:
            angle_start: 0
            angle_end: self.pin_two
            size: dp(20), dp(20)
            pos: self.width /2 - dp(37), self.height / 2 + dp(150)
        Ellipse:
            angle_start: 0
            angle_end: self.pin_three
            size: dp(20), dp(20)
            pos: self.width /2 + dp(23), self.height / 2 + dp(150)
        Ellipse:
            angle_start: 0
            angle_end: self.pin_four
            size: dp(20), dp(20)
            pos: self.width /2 + dp(83), self.height / 2 + dp(150)


    FloatLayout:
        # canvas:
        #     Color:
        #         rgba: (1, 1, 0, 0.1)
        #     Rectangle:
        #         size: root.size
        #         pos: 0, 0
        id: pin_pad_float_container
        pos: 0, 0
        size_hint: None, None
        size: root.size

        Label:
            text: 'PIN REQUIRED'
            pos: 0, 0
            pos: root.width/2 - self.width / 2, root.y_position + dp(400)
            font_size: '12sp'
            size_hint: None, None
            color: root.pinpad_button_color
            font_name: 'Nunito'

        GridLayout:
            # canvas:
            #     Color:
            #         rgba: (1, 1, 0, 1)
            #     Rectangle:
            #         size: self.size
            #         pos: root.width / 2 -  dp(120),  root.y_position
            id: pin_pad_layout
            cols: 3
            rows: 4
            spacing: dp(32)
            size_hint: None, None
            size: dp(215), dp(330)
            pos: root.width / 2 -  dp(105), root.y_position
            opacity: root.pinpad_opacity

