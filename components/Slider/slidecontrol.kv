#:kivy 2.0.0
#: import ew kivy.uix.effectwidget
<SlideControl>:
    size_hint: None, None
    size: root.size
    pos: root.pos
    
    FloatLayout:
        size_hint: None, None
        size: root.size
        spacing: dp(1)
        canvas:
            Color:
                rgba: root.background_color
            RoundedRectangle:
                pos: root.pos
                size: root.size
                radius: [2,]
            Color:
                rgba: root.active_color
            RoundedRectangle:
                pos: root.pos
                size: root.width, (root.level * root.height / 100.0)
                radius: [2,]
        Label:
            pos: root.x - dp(self.width) - dp(10), (root.level * root.height / 100.0) - self.texture_size[1] / 2
            color: root.text_color
            text: "{}%".format(round(root.level))
            opacity: root.label_opacity
        
