<Reveal>:
    id: reveal
    canvas.before:
        Color:
            rgba: (1,1,1,0)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0,]

<RevealTop>:
    id: reveal
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0,]

<RevealBottom>:
    id: reveal
    canvas.before:
        Color:
            rgba: (.8,.8,.8,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0,]

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"

        BoxLayout:
            id: parent_bottom
            size_hint_x: .5

