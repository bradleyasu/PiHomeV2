#:kivy 2.0.0
<Reveal>:
    id: reveal
    canvas.before:
        Color:
            rgb: (1,.6,1)
        Rectangle:
            pos: self.pos
            size: self.size

<RevealTop>:
    id: reveal
    canvas.before:
        Color:
            rgba: (0, 255, 127 ,1)
        Rectangle:
            pos: self.pos
            size: self.size

<RevealBottom>:
    id: reveal
    canvas.before:
        Color:
            rgba: (1,.6,.6,1)
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"

        BoxLayout:
            id: parent_bottom
            size_hint_x: .5

