#:kivy 2.0.0

<PiHomeSwitch>:
    size: self.size
    pos: self.pos
    size_hint: None, None
    canvas:
        Color:
            rgba: root.border_color
        RoundedRectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: root.background_color
        RoundedRectangle:
            pos: self.x + dp(1), self.y + dp(1)
            size: self.width - (dp(2)), self.height - (dp(2))

        Color:
            rgba: root.button_color
        RoundedRectangle:
            pos: self.x + dp(2) + self.offset, self.y + dp(2)
            size: self.width / 2, self.height - (dp(4))
