#:kivy 2.0.0

<NetworkImage>:
    size_hint: None, None
    pos: root.pos
    size: root.size
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: root.pos
            size: root.size
    
    GridLayout:
        cols: 1
        rows: 1
        pos: root.pos
        size: root.size
        size_hint: None, None
        AsyncImage:
            canvas:
                Color:
                    rgba: root.color
                Rectangle:
                    pos: root.pos
                    size: root.size
            size_hint: None, None
            pos: root.pos
            size: root.size