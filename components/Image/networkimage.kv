#:kivy 2.0.0

<NetworkImage>:
    pos: root.pos
    size: root.size
    size_hint: None, None
    canvas.before:
        Color:
            rgba: (0, 1, 0, 0) 
        Rectangle:
            pos: root.pos
            size: root.size
    
    AsyncImage:
        canvas.before:
            Color:
                rgba: (1, 0, 1, 0)
            Rectangle:
                pos: root.pos
                size: root.size
        size_hint: None, None
        source: root.url
        pos: root.pos
        size: root.size