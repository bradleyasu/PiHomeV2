#:kivy 2.0.0
#: import ew kivy.uix.effectwidget
<Toast>:
    size_hint: None, None
    size: self.size
    pos: self.pos
    opacity: self.opacity
    canvas:
        Scale:
            origin: self.center
            xyz: [1, self.zoom, 1]
        Color:
            rgba: self.background_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + self.y_pos_offset

    GridLayout:
        canvas:
            Color:
                rgba: (0,1,0,0)
            Rectangle:
                size: root.size
                pos: root.pos
        cols: 1
        size: root.size
        size_hint: None, None
        pos: root.x, root.y + root.y_pos_offset

        Label:
            text: root.text
            color: root.text_color
    