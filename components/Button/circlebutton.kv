#:kivy 2.0.0

<CircleButton>:
    size_hint: None, None

    canvas:
        Scale:
            origin: self.center
            xyz: [self.zoom, self.zoom, 1]
        Color:
            rgba: self.color
        RoundedRectangle:
            radius: dp(self.height/2),
            size: self.size
            pos: self.pos
        Color:
            rgba: self.stroke_color
        Line:
            width: dp(self.stroke_width)
            circle:
                self.center_x, self.center_y, min(self.width, self.height) / 2, 0, 360
    
    Label: 
        text: root.text
        pos: root.pos
        font_size: root.font_size
        font_name: root.custom_font
        size_hint: None, None
        size: root.size
        color: root.text_color