#:kivy 2.0.0

<CircleButton>:
    size_hint: None, None

    canvas:
        Scale:
            origin: self.center
            xyz: [self.zoom, self.zoom, 1]
        Color:
            rgba: self.color
        RoundedRectangle:
            radius: sp(self.height/2),
            size: sp(self.width), sp(self.height)
            pos: self.pos
        Color:
            rgba: self.stroke_color
        Line:
            width: 2.
            circle:
                (self.center_x, self.center_y, min(self.width, self.height) / 2, 0, 360) 
    

    Label: 
        text: root.text
        pos: (root.width/2, root.width/2)
        font_size: sp(root.height / 4)
        size_hint: None, None
        color: root.text_color