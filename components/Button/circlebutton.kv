#:kivy 2.0.0

<CircleButton>:
    size_hint: None, None

    canvas:
        Scale:
            origin: self.center
            xyz: [self.zoom, self.zoom, 1]
        Color:
            rgba: self.color
        RoundedRectangle:
            radius: dp(self.height/2),
            size: (dp(self.width), dp(self.height))
            pos: (dp(self.x), dp(self.y))
        Color:
            rgba: self.stroke_color
        Line:
            width: 2.
            circle:
                (dp(self.center_x), dp(self.center_y), dp(min(self.width, self.height) / 2), 0, 360) 
    

    Label: 
        text: root.text
        pos: dp(root.width/2), dp(root.width/2)
        font_size: sp(root.height / 4)
        size_hint: None, None
        color: root.text_color