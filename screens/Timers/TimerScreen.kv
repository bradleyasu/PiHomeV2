#:kivy 2.0.0
<TimerScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "New Timer"
            font_size: 50
        Label:
            id: timer
            text: root.timerLabel
            font_size: 100
       