#:kivy 2.0.0
<PiHoleScreen>:
    canvas.before:
        Color:
            rgba:  root.background_color_secondary
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        padding: 10
        spacing: 10

        GridLayout:
            size_hint: 1, 1
            cols: 1
            rows: 2
            spacing: 10

            GridLayout:
                size_hint: 0.5, 0.5
                cols: 4
                rows: 1
                spacing: 10

                GridLayout:
                    cols: 1
                    rows: 2
                    spacing: 0
                    Label:
                        text: 'Blocked Domains '
                        font_size: dp(20)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

                    Label:
                        text: root.domains_being_blocked
                        font_size: dp(42)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

                GridLayout:
                    cols: 1
                    rows: 2
                    spacing: 0
                    Label:
                        text: 'Blocked Ads'
                        font_size: dp(20)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

                    Label:
                        text: root.ads_blocked_today
                        font_size: dp(42)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

                GridLayout:
                    cols: 1
                    rows: 2
                    spacing: 0
                    Label:
                        text: 'Unique Clients'
                        font_size: dp(20)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.unique_clients
                        font_size: dp(42)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

                GridLayout:
                    cols: 1
                    rows: 2
                    spacing: 0
                    Label:
                        text: 'Current Status'
                        font_size: dp(20)
                        color: root.text_color
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.status
                        font_size: dp(42)
                        color: root.text_color
                        bold: True
                        halign: 'center'
                        valign: 'middle'

            FloatLayout:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                PiHomeSwitch:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    enabled: root.status == 'enabled'
                    on_enabled: root.toggle_pihole(self.enabled)
                    halign: 'center'
                    valign: 'middle'
                        