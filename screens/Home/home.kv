#:kivy 2.0.0
<HomeScreen>:
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout:
        size_hint: 1, 1
        pos: root.pos
        size: root.size

        canvas:
            Color: 
                rgba: (0,0,1, 0.0)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: home_pihome_logo
            color: root.text_color
            text: "PiHome"
            # pos_hint: 0.5, 0.5
            font_size: '72sp'
            font_name: 'Nunito'
            opacity: root.logo_opacity
        
        GridLayout:
            canvas:
                Color: 
                    rgba: (0,0,1, 0.0)
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols: 1
            size_hint: None, None
            pos: dp(10), dp(20 + root.date_time_y_offset)
            size: dp(300), dp(100)
            opacity: root.date_time_opacity
            Label:
                color: root.text_color
                id: home_date
                text: root.date
                font_size: '24sp'
                font_name: 'Nunito'
            Label:
                id: home_time
                color: root.text_color
                text: root.time
                font_size: '72sp'
                font_name: 'Nunito'

        RedditWidget:
            size_hint: None, None
            pos: dp(0), root.height - dp(200)
            
        GridLayout:
            canvas:
                Color: 
                    rgba: (0,0,1, 0.0)
                Rectangle:
                    pos: self.pos
                    size: self.size 
            cols: 1
            size_hint: None, None
            pos: root.width - dp(120), root.height - dp(50)
            size: dp(100), dp(50)
            # Label:
            #     id: weather
            #     color: root.text_color
            #     text: root.weather_code
            #     font_size: '72sp'
            #     font_name: 'Nunito'
            WeatherWidget:
