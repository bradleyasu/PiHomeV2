#:kivy 2.0.0
<TaskScreen>:
    name: 'task'
    canvas.before:
        Color:
            rgba: root.background
        Rectangle:
            size: self.size
            pos: self.pos
    NetworkImage:
        url: root.background_image
        size_hint: 1,1
        size: root.size
        pos: root.pos
        keep_ratio: True
        auto_refresh_interval: 0
        opacity: 0 if root.background_image == '' else 1
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Label:
            text: root.title
            font_size: '30sp'
            font_name: 'Nunito'
            color: root.text_color
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: 1, 0.4
        Label:
            text: root.description
            font_size: '20sp'
            font_name: 'Nunito'
            color: root.text_color
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        GridLayout:
            cols: 3
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.565, 'center_y': 0.1}
            spacing: dp(140)
            CircleButton:
                text: '✓'
                custom_font: 'ArialUnicode'
                font_size: '30sp'
                stroke_width: 1.4
                stroke_color: (0, 255, 0, 1)
                primary_color: (0, 255, 0, 0.6)
                color: (0, 255, 0, 0.6)
                down_color: (0, 255, 0, 1)
                on_press: root.confirm()
                size: dp(75), dp(75)
            CircleButton:
                text: "✕"
                font_size: '32sp'
                custom_font: 'ArialUnicode'
                stroke_width: 1.4
                stroke_color: (255, 0, 0, 1)
                primary_color: (255, 0, 0, 0.6)
                color: (255, 0, 0, 0.6)
                down_color: (255, 0, 0, 1)
                on_press: root.cancel()
                size: dp(75), dp(75)
