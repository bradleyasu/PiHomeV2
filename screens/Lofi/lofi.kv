#:kivy 2.0.0
<LofiScreen>:
    canvas.before:
        Color:
            rgba:  (0,0,0,1)
        Rectangle:
            pos: self.pos
            size: self.size
        
    FloatLayout:
        size: root.size
        pos: root.pos
        size_hint: 1,1

        # NetworkImage:
        #     url: root.image
        #     size: root.size
        #     pos: root.pos
        #     size_hint: 1,1
        #     stretch: True
        #     k_ratio: False

        Image:
            source: root.image
            size: root.size
            size_hint: 1,1
            pos: root.pos
            anim_delay: 0.1
            allow_stretch: True
            keep_ratio: False

        WheelMenu:
            id: wheel_menu
            pos: root.width /2 - self.width/2, root.height /2 - self.height/2
            options: root.wheel_options

        Volume:
            pos: (root.width - dp(50)), (root.height/2 - self.height/2)