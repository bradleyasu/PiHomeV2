#:kivy 2.0.0
<LofiScreen>:
    canvas.before:
        Color:
            rgba:  (0,0,0,0)
        Rectangle:
            pos: self.pos
            size: self.size
        
    FloatLayout:
        size: root.size
        pos: root.pos
        size_hint: 1,1

        NetworkImage:
            url: root.image
            size: root.size
            pos: root.pos
            size_hint: 1,1
            stretch: True
            k_ratio: False


        Volume:
            pos: (root.width - dp(50)), (root.height/2 - self.height/2)